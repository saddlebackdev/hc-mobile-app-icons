{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/types", 
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "generated/**/*.ts",
    "generated/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}